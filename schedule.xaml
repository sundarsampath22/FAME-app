<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.schedule">
    <ContentPage.Content>
       <StackLayout BackgroundColor="White">
            <Label FontSize="Medium" Text="My schedules" TextColor="Black" VerticalOptions="Center"
               HorizontalOptions="Center" ></Label>
           
            <StackLayout BackgroundColor="AntiqueWhite" 
                Margin="10" Padding="20" VerticalOptions="Start">
            
                <ListView x:Name="myList"></ListView>

            </StackLayout>
       </StackLayout>
    </ContentPage.Content>
</ContentPage>